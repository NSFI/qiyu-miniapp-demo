/* pages/setItem/card/card.wxss */
page{
  --red: #C93D3E;
	--orange: #f37b1d;
	--yellow: #C7AD72;
	--olive: #8dc63f;
	--green: #39b54a;
	--cyan: #1cbbb4;
	--blue: #0081ff;
	--purple: #6739b6;
	--mauve: #9c26b0;
	--pink: #F28A89;
	--brown: #a5673f;
	--grey: #8799a3;
	--black: #333333;
	--darkGray: #666666;
	--gray: #aaaaaa;
	--ghostWhite: #f1f1f1;
	--white: #ffffff;
  background: #eee;
}
.flex{
  display: flex;
}
.border-bottom{
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);

}

.m-Info{
  margin-top:20rpx;
}
.card-form-group{
  background-color: var(--white);
  padding: 1rpx 30rpx;
  /* display: flex; */
  align-items: center;
  min-height: 100rpx;
  justify-content: space-between;
}

.card-form-group input {
  flex: 1;
  font-size: 28rpx;
  color: #555;
  /* padding-right: 20rpx; */
  padding:10rpx 20rpx;
}

.submit{
  margin:30rpx 20rpx 0 20rpx;
  font-size:14px;
  background-color:var(--yellow);
  color:white;
}

.cancel{
  background-color: var(--gray);
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  overflow: hidden;
  text-align: center;
  color: white;
  font-size:14px;
}