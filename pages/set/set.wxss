/* pages/set/set.wxss */
page{
  --red: #C93D3E;
	--orange: #f37b1d;
	--yellow: #C7AD72;
	--olive: #8dc63f;
	--green: #39b54a;
	--cyan: #1cbbb4;
	--blue: #0081ff;
	--purple: #6739b6;
	--mauve: #9c26b0;
	--pink: #F28A89;
	--brown: #a5673f;
	--grey: #8799a3;
	--black: #333333;
	--darkGray: #666666;
	--gray: #aaaaaa;
	--ghostWhite: #f1f1f1;
	--white: #ffffff;
  background: #eee;
}
.detail-container{
  background: white;
}
.detail-item {
  padding: 16px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.detail-item:before {
  right: 15px;
  content: " ";
  position: absolute;
  top: 0;
  height: 1px;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  color: rgba(0, 0, 0, 0.1);
  left: 16px;
}

.detail-title {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.detail-icon {
  padding-right: 16px;
  position: relative;
  text-align: right;
  color: rgba(0, 0, 0, 0.5);
}

.detail-icon:after {
  content: " ";
  display: inline-block;
  height: 8px;
  width: 8px;
  border-width: 2px 2px 0 0;
  border-color: #b2b2b2;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  top: -2px;
  position: absolute;
  top: 50%;
  margin-top: -5px;
  right: 0;
}

.tip-container {
  padding: 30rpx 30rpx;
  font-size: 15px;
  border-radius: 10rpx;
  margin: 30rpx 20rpx;
  background-color:var(--yellow);
  color:white; 
}
